@model Data.Model.Picture

@{
    ViewBag.Title = "Create";
}

<h3>Загрузка изображений</h3>


@using (Html.BeginForm("UploadFiles", "Pictures", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h5>Доступные форматы изображений: jpg, jpeg, gif, png</h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="filesToUpload" multiple="multiple" accept=".gif,.jpg,.jpeg,.png"/>
            <br>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Загрузить" class="btn btn-success" />
        </div>
    </div>

</div>
}
<hr />
<div>
    @Html.ActionLink("К списку изображений", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
